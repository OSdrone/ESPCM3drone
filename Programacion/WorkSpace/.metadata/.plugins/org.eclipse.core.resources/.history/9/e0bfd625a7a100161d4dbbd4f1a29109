#include "AHRS.h"

q15_t Compensacion_Sensor_magnetico(q15_t Roll, q15_t Pitch, int16_t VectorMagnetico[3]){
	q31_t SenRoll = 0;
	q31_t CosRoll = 0;
	q31_t SenPitch = 0;
	q31_t CosPitch = 0;

	q31_t MagX = 0;
	q31_t MagY = 0;

	arm_sin_cos_q31(Roll, &SenRoll, &CosRoll);
	arm_sin_cos_q31(Pitch, &SenPitch, &CosPitch);

	SenRoll=>>16;

	return (q15_t)(32767 * atan2(MagY, MagX));
}
